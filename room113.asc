	cAruthredd.Say("Does he have her?");
	cEloia.Say("She'll be well! Rest.");
  
	short a = 99;
	while (a > 0) {
	  a -= 9;
	  cShadowmage.Transparency = a;
	  cShadowmage2.Transparency = a;
	  cShadowmage3.Transparency = a;
	  cShadowmage4.Transparency = a;
	  Wait(1);
