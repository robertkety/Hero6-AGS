// room script file

short answer[3];
short input[3];
short index = 0;

bool wrong = false;

short buttonsPressed = 0;

function check() {
  
  if (buttonsPressed == 3) {
    Wait(20);
		oSym1.Graphic = 1387;
		oSym2.Graphic = 1389;
		oSym3.Graphic = 1391;
		oSym4.Graphic = 1393;
		oSym5.Graphic = 1395;
		oSym6.Graphic = 1397;
		oSym7.Graphic = 1399;
		oSym8.Graphic = 1401;
		oSym9.Graphic = 1403;
		oSym10.Graphic = 1405;
		oSym11.Graphic = 1407;
		oSym12.Graphic = 1409;
		buttonsPressed = 0;
		index = 0;
		
		while (index < 3) {
		  if (answer[index] != input[index]) {
				wrong = true;
			}
		
		  index++;
		}
		if (!wrong) {
		  SetGlobalInt(1, 1);
		  StopMusic();
		  ShakeScreen(3);
		 	Display("After entering the sequence, the walls begin to rumble");
		 	cEgo.ChangeRoom(54);

		  //Display("Correct");
		}
		else {
		  //Display("Wrong");
		}
    // reset for next iteration
		index = 0;
		wrong = false;
		
	}

}

